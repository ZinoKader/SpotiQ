<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal" >

    <ImageView
        android:id="@+id/notification_album_cover"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />

    <LinearLayout
        android:id="@+id/notification_app_icon_view"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/notification_app_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/spotiqlogoblackandwhite"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/notification_app_icon_view">

        <TextView
            android:id="@+id/notification_artist_name"
            android:maxLines="1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/materialWhite"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="8"/>

        <TextView
            android:id="@+id/notification_track_name"
            android:maxLines="1"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/materialWhite"
            android:textSize="@dimen/text_size_medium"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="8"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/notification_playpause_button"
        android:background="?android:selectableItemBackground"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_play_pause_notification"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
