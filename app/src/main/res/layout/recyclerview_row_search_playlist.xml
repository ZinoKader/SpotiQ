<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp">


        <ImageView
            android:id="@+id/playlistArt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playlistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light"
            android:maxLines="1"
            android:maxWidth="220dp"
            android:shadowColor="@color/colorMaterialGray"
            android:textAlignment="viewStart"
            android:textColor="@color/colorMaterialWhite"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/playlistArt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playlistCreatorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light"
            android:maxLines="1"
            android:maxWidth="220dp"
            android:shadowColor="@color/colorMaterialGray"
            android:textAlignment="viewStart"
            android:textColor="@color/colorMaterialWhite"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/playlistArt"
            app:layout_constraintTop_toBottomOf="@+id/playlistName" />


        <TextView
            android:id="@+id/songCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light"
            android:maxLines="1"
            android:maxWidth="220dp"
            android:shadowColor="@color/colorMaterialGray"
            android:textAlignment="viewStart"
            android:textColor="@color/colorMaterialWhite"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/playlistCreatorName"
            app:layout_constraintStart_toEndOf="@+id/playlistArt"
            android:layout_marginStart="20dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>

