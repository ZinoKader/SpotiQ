<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/requestedSongsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:elevation="5dp"
            android:shadowColor="@color/colorMaterialGray"
            android:text="@string/selected_songs_hint_label"
            android:textAlignment="center"
            android:textColor="@color/colorMaterialWhite"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <se.zinokader.spotiq.util.view.NoScrollListView
            android:id="@+id/requestedSongsListView"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingBottom="30dp"
            android:divider="@null"
            android:focusable="true"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/requestedSongsLabel" />

    </android.support.constraint.ConstraintLayout>

</layout>